@model Vidly.ViewModels.AllCustomersViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Customers.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Customer</th>
        </tr>
        </thead>
        <tbody>
        
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>
                    <a href="/Customers/Details/@customer.Id">@customer.Name</a>
                </td>
            </tr>
        }


        </tbody>
    </table>
}
else
{
    <text>No customers found in the database...</text>
}

