@model Vidly.ViewModels.AllCustomersViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Customers.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
        </tr>
        </thead>
        <tbody>
        
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>
                   @* <a href="/Customers/Details/@customer.Id">@customer.Name</a>*@
                    @Html.ActionLink(customer.Name, "Details", "Customers", new {id=customer.Id}, null)
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
            </tr>
        }


        </tbody>
    </table>
}
else
{
    <text>No customers found in the database...</text>
}

