@model Vidly.ViewModels.AllMoviesViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>



@if (Model.Movies.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Movie</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>
                        <a href="/Movies/Details/@movie.Id">@movie.Name</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <text>No movies found in the database...</text>
}

